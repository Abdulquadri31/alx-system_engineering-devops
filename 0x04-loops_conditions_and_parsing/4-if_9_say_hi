#!/usr/bin/env bash
# This script displays "Best School" 10 times, with "Hi" on a new line after "Best School" on the 9th iteration

count=1
while [ "$count" -le 10 ]; do
    if [ "$count" -eq 9 ]; then
        echo "Best School"
        echo "Hi"
    else
        echo "Best School"
    fi
    count=$((count + 1))
done
